<h1> New User </h1>

<%= form_for(@user) do |f| %>
<%= f.label :name %>
<%= f.text_field :name %>
<%= f.label :password %>
<%= f.text_field :password %>
<%= f.label :height, "Height (in inches)" %>
<%= f.text_field :height %>
<%= f.label :happiness, "How happy are you? (1-5 scale)" %>
<%= f. text_field :happiness %>
<%= f.label :nausea, "How nauseous are you? (1-5 scale)" %>
<%= f.text_field :nausea %>
<%= f.label :tickets, "How many dollars are in your pocket?" %>
<%= f.text_field :tickets %>
<div class="field">
    <%= f.label :user_admin, "Check box if you are a theme park owner" %> <br />
    <%= f.check_box :admin %> <br />
</div>
<%= f.submit %>
<% end %>
