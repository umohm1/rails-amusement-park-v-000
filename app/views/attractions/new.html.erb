<%= form_for @attraction do |f| %>
  <p><%= f.label :name %>
  <%= f.text_field :name %></p>
  <p><%= f.label "Height (in inches)" %>
  <%= f.number_field :min_height %></p>
  <p><%= f.label "How happy are you? (1-5)" %>
  <%= f.number_field :happiness_rating %></p>
  <p><%= f.label "How nauseous are you? (1-5)" %>
  <%= f.number_field :nausea_rating %></p>
  <p><%= f.label "How many tickets do you have?" %>
  <%= f.number_field :tickets %></p>
  <%= f.submit %>
<% end %>
